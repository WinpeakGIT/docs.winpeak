{
  "metadata": [
    {
      "src":[
            {
               "files":[
                  "Runtime/**.cs"
               ],
               "src":"../../WinpeakClient/com.winpeak.unity/",
                "exclude": [
                    "**/Org.BounceCastle/**",
                    "**/BestHTTP/**",
                    "**/SimpleJSON/**"
                ]
            }
         ],
         "dest":"API"
      }
  ],
  "build": {
    "content": [
      {
        "files": [
          "API/**.yml"
        ],
        "exclude": [
            "**/bin/**"
        ]
      },
      {
        "files": [
          "API/**.md",              
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "favicon.ico"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "API/**.md"
        ],
        "exclude": [
            "**/bin/**",
            "**/obj/**"
        ]
      }
    ],
    "dest":"../docs",
    "template":[
        "default",
        "templates/unity"
    ]
  }
}